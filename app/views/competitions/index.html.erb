<div class = "container">

	<h1>Competitions</h1>

	<ul class="list-group">
		<% @competitions.each do |competition| %>
			<% li_item = "#{competition.id} - #{competition.eventDatetime} - #{competition.title}" %>
			<li class="list-group-item"><%= link_to li_item, competition_path(competition)%></li>
		<% end %>
	</ul>

	<button><%= link_to "Create a new competition", new_competition_path %></button>

</div>

	