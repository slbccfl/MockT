<h1>Competition Details</h1>


<h3><%= @competition.title  %></h3>

<h3><%= @competition.eventDatetime  %></h3>

<ol>
<% @competition.competition_rounds.each do |round| %>
	<li><%= "Round: ${round}" %></li>
<% end %>
</ol>

<button><%= link_to "Return to list of competitions", competitions_path %></button>
<button><%= link_to "Update this competition", edit_competition_path(@competition) %></button>
<button><%= link_to "Delete this competition", competition_path(@competition), method: :delete  %></button>
<br>
<form method="post" action="/competitions/<%= @competition.id %>/competition_rounds">
	<button type="submit">Add a Round to this competition</button>	
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
<% disable = "" %>
<% disable = "disabled" if @competition.competition_rounds.count == 0 %>
	
<button <%= disable %>><%= link_to "Remove a Round from this competition", competition_competition_round_path(@competition, id: @competition.competition_rounds), method: :delete  %></button>
<br>
