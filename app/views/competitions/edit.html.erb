<div class = "row mockt-page-nav">
</div>

<div class="container">

	<h1>Edit Competition</h1>

	<%= form_for @competition do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title %>
		<br>		<br>
		<%= f.label "Case: " %>
		<%= f.collection_select(:case_id, @cases, :id, :caseName, :selected => @competition.case_id) %>) %>
		<br>
		<%= f.label "Event Location: " %>
		<%= f.collection_select(:institution_id, @institutions, :id, :name, :selected => @competition.institution_id) %> %>
		<br>
		<%= f.label "Event Date and Time: " %>
		<% @competition.eventDatetime = Date.current.in_time_zone if @competition.eventDatetime == nil %>
		<%= f.datetime_field :eventDatetime %>
		<br>
		<%= f.button %>
	<% end %>

</div>