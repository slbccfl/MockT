<!DOCTYPE html>
<html>
<head>
  <title>Mockt</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>

<body>
  <div class="container mockt-heading-background">
  </div>
  <div class="container mockt-heading">
    <div class="row">
      <div class="row">
        <div class="col-sm-9 mockt-heading-col">
          <h1>MockT</h1>
          <h2>Mock Trail Competition Archives</h2>
        </div><!-- close columns -->
        <div class="col-sm-3 mockt-heading-col">
          <div class="btn-group" role="group" aria-label="Heading Nav">
            <% if current_user %>
              <h4>Welcome, <%= current_user.email %>!</h4>
            <% else %>
              <h4> Register for access or log in to MockT </h4>
            <% end %>
          </div><!-- close btn-group -->
        </div><!-- close columns -->
      </div><!-- close row -->
    </div><!-- close row -->
    <div class="row mockt-heading-nav"> 
      <div class="col-sm-9 mockt-heading-col">
        <div class="btn-group" role="group" aria-label="Heading Nav">
          <% if current_user %>
            <button class="btn btn-secondary"><%= link_to "Competitions", competitions_path %></button>
            <button class="btn btn-secondary"><%= link_to "Teams", teams_path %></button>
            <button class="btn btn-secondary"><%= link_to "Team Members", team_members_path %></button>
          <% end %>
        </div><!-- close btn-group -->
      </div><!-- close columns -->
      <div class="col-sm-3 mockt-heading-col">
          <div class="btn-group" role="group" aria-label="Heading Nav">
            <% if current_user %>
              <button class="btn btn-secondary"><%= link_to "Profile", "/users/edit" %></button>
              <button class="btn btn-secondary"><%= link_to "Log out", "/users/sign_out", :method => :delete %></button>
              <% if current_user.role == 'admin' %>
                 <button class="btn btn-secondary"><%= link_to "All profiles", "/users" %></button>
              <% end %>
            <% else %>
              <button class="btn btn-secondary"><%= link_to "Sign up", "/users/sign_up" %></button>
              <button class="btn btn-secondary"><%= link_to "Log in", "/users/sign_in" %></button>
            <% end %>
          </div><!-- close btn-group -->
      </div><!-- close columns -->
    </div><!-- close row -->
  </div><!-- close container-->
  
  <div class = "container-fluid mockt-page">
    <%= yield %>
  </div>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

</body>
</html>
