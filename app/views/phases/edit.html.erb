<div class = "row mockt-page-nav">
	<button class="btn btn-secondary">
		<%= link_to "Remove this phase from the ballot", competition_phase_path(@competition, @phase), method: :delete %>
	</button>
</div>

<div class="container">
	<h1>Edit Phase for <%= @competition.title %></h1>

	<%= form_for [@competition, @phase] do |f| %>
		<%= f.label :order %>
		<%= f.number_field :order %>
		<br>
		<%= f.label :pTitle %>
		<%= f.text_field :pTitle %>
		<br>
		<%= f.label :dTitle %>
		<%= f.text_field :dTitle %>
		<br>
		<br>
		<%= f.button %>

	<% end %>
</div>